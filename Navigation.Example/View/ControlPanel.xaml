<UserControl x:Class="Navigation.Example.View.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Navigation.Example.View"
             
             xmlns:nav="clr-namespace:Navigation.Controls;assembly=Navigation"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Command="{Binding AddCommand}"
                    Content="Add"/>
            <Button Grid.Column="1"
                    Command="{Binding RemoveCommand}" 
                    Content="Remove"/>
        </Grid>

        <nav:NavigationTabControl Grid.Row="1" 
                                  Collection="{Binding OutputTabs}"
                                  SelectedIndex="{Binding SelectedIndex}"/>
    </Grid>
</UserControl>
